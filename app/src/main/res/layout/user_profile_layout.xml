<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <com.loopj.android.image.SmartImageView
        android:id="@+id/user_profile_header"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:src="@mipmap/ic_launcher" />

    <com.loopj.android.image.SmartImageView
        android:id="@+id/user_profile_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="40dp"
        android:foregroundGravity="center"
        android:src="@mipmap/ic_launcher" />

    <TabWidget
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/user_profile_tab"
        android:layout_below="@id/user_profile_header" />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:id="@+id/user_profile_t"
        android:layout_below="@id/user_profile_tab"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:text="UserName"
        android:layout_below="@+id/user_profile_icon"
        android:layout_centerHorizontal="true" />


</RelativeLayout>